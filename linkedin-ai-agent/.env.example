# OpenAI API Key for embeddings and LLM
OPENAI_API_KEY=your_openai_key

# Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# LinkedIn OAuth Credentials (get from LinkedIn Developer Portal)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:8080/callback

# Optional: Custom settings
CHROMA_PERSIST_DIR=./chroma_db
REPOS_CACHE_DIR=./repos_cache
USER_CONFIGS_DIR=./user_configs

# Phase 4: AI Agent (optional - enables advanced features)
# HackerNews API: FREE, no key needed!

# Twitter API for trend research (OPTIONAL - get from developer.twitter.com)
# If not set, agent uses HackerNews only (which is free)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# LinkedIn Marketing API for engagement metrics
# Requires Marketing Developer Platform access
LINKEDIN_MARKETING_ACCESS_TOKEN=your_marketing_token

# Agent settings
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT_SECONDS=60
